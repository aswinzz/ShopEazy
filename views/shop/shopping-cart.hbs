{{# if products }}
  
  <div class="row">
   {{# each products}}
   <div class="col-sm-6 col-md-4">
     <ul class="list-group">
      
      <li class="list-group-item">  
      <div class="thumbnail">
       <img src="{{ this.item.imagePath }}" class="img-responsive">
       </div>  
       <span class="badge">{{ this.qty }}</span>
       <strong>{{ this.item.title }}</strong>
       <span class="label label-success">${{ this.price }}</span>
       <a href="/reduce/{{this.item._id}}"><span class="label label-success">Reduce By 1</span></a>
       <a href="/removeall/{{this.item._id}}"><span class="label label-success">Remove all</span></a>
      </li>
      
      </ul>
  </div>
 {{/each}}
</div>


<div class="row">

   <div class="col-sm-6 col-md-4">
     <strong>Total Price : {{ totalPrice }}</strong>
  </div>

</div>
<hr>
<div class="row">

   <div class="col-sm-6 col-md-4">
     <a href="/checkout"><button type="button" class="btn btn-success">Checkout</button></a>
  </div>

</div>
{{ else}}
 <div class="row">

   <div class="col-sm-6 col-md-4">
     <h2> Empty Cart </h2>
  </div>

</div>
{{/if}}



